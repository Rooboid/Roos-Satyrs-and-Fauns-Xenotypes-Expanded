<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============================== Satyr and Faun Backstories - Childhood ============================-->
	
	<!--============================== Palmist ============================-->
	<!-- Good all-rounder with ascetic trait -->

	<BackstoryDef>
		<defName>RBSFE_PalmReader</defName>
		<title>palm reader</title>
		<titleShort>palmist</titleShort>
		<slot>Childhood</slot>
		<baseDesc>[PAWN_nameDef] made a living reading the palms of passerby travellers. The silver [PAWN_pronoun] was given in return was merely a novelty. Everything [PAWN_pronoun] needed was already provided by Mother Earth.</baseDesc>
		<bodyTypeMale>Thin</bodyTypeMale>
		<bodyTypeFemale>Thin</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
		</spawnCategories>
		<skillGains>
			<Social>4</Social>
			<Medicine>3</Medicine>
			<Plants>3</Plants>
		</skillGains>
		<forcedTraits>
			<Ascetic>0</Ascetic>
		</forcedTraits>
		<disallowedTraits>
			<Transhumanist>0</Transhumanist>
			<PsychicSensitivity>-1</PsychicSensitivity>
			<PsychicSensitivity>-2</PsychicSensitivity>
			<DrugDesire>2</DrugDesire>
			<DrugDesire>1</DrugDesire>
		</disallowedTraits>
		<possessions>
			<Silver>10</Silver>
		</possessions>
	</BackstoryDef>
	
	<!--============================== Mysterious Healer ============================-->
	<!-- Great medical gains, but incapable of many consistent work types and reclusive -->

	<BackstoryDef>
		<defName>RBSFE_MysteriousHealer</defName>
		<title>mysterious healer</title>
		<titleShort>healer</titleShort>
		<slot>Childhood</slot>
		<baseDesc>[PAWN_nameDef] used natural remedies to cure passing adventurers of their wounds. Many theorised [PAWN_nameDef] to be a mirage, for as quickly as [PAWN_pronoun] appeared from the overgrowth to tend to the weak, [PAWN_pronoun] would disappear again.</baseDesc>
		<bodyTypeMale>Thin</bodyTypeMale>
		<bodyTypeFemale>Thin</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
		</spawnCategories>
		<skillGains>
			<Medicine>8</Medicine>
			<Plants>3</Plants>
		</skillGains>
		<forcedTraits>
			<Recluse>0</Recluse>
		</forcedTraits>
		<disallowedTraits>
			<Tough>0</Tough>
		</disallowedTraits>
		<workDisables>
			<li>Artistic</li>
			<li>Violent</li>
			<li>Crafting</li>
		</workDisables>
		<requiredWorkTags>
			<li>Caring</li>
		</requiredWorkTags>
		<possessions>
			<MedicineHerbal>5</MedicineHerbal>
		</possessions>
	</BackstoryDef>
	
	<!--============================== Circus Act ============================-->
	<!-- Forces cannibal trait, but poor gains -->

	<BackstoryDef>
		<defName>RBSFE_CircusAct</defName>
		<title>circus act</title>
		<titleShort>traveller</titleShort>
		<slot>Childhood</slot>
		<baseDesc>[PAWN_nameDef] was a member of a travelling circus troupe that fascinated humans who had never seen another xeno before. Unlike the rest of the troupe, [PAWN_nameDef] was kept in a cage alongside the animals, and was subsequently fed like one too.</baseDesc>
		<bodyTypeMale>Thin</bodyTypeMale>
		<bodyTypeFemale>Thin</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
			<li>Minotaur</li>
		</spawnCategories>
		<skillGains>
			<Animals>2</Animals>
			<Social>-5</Social>
		</skillGains>
		<forcedTraits>
			<Cannibal>0</Cannibal>
		</forcedTraits>
		<workDisables>
			<li>ManualSkilled</li>
		</workDisables>
	</BackstoryDef>
	
	<!--============================== Fermenter ============================-->
	<!-- Decent gains with no forced or declined traits -->

	<BackstoryDef>
		<defName>RBSFE_Fermenter</defName>
		<title>fermenter</title>
		<titleShort>fermenter</titleShort>
		<slot>Childhood</slot>
		<baseDesc>[PAWN_nameDef] was raised in a ramshackled market town by [PAWN_possessive] adoptive grandmother. The duo specialised in fermenting foods, drinks and sauces for the, albeit infrequent, passersby. [PAWN_nameDef]â€™s grandmother passed away before [PAWN_pronoun] ever learned what happened to [PAWN_possessive] parents, but the state of ruin that [PAWN_possessive] town was in gave [PAWN_pronoun] an inkling that it was poverty that took their lives.</baseDesc>
		<bodyTypeMale>Thin</bodyTypeMale>
		<bodyTypeFemale>Thin</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
			<li>MinotaurTribe</li>
		</spawnCategories>
		<skillGains>
			<Cooking>5</Cooking>
			<Plants>4</Plants>
			<Intellectual>-3</Intellectual>
			<Social>-3</Social>
		</skillGains>
		<possessions>
			<RawBerries>10</RawBerries>
		</possessions>
	</BackstoryDef>
	
	<!--============================== Trickster ============================-->
	<!-- Well-rounded but locked out of positive industrious traits -->

	<BackstoryDef>
		<defName>RBSFE_Trickster</defName>
		<title>trickster</title>
		<titleShort>trickster</titleShort>
		<slot>Adulthood</slot>
		<baseDesc>[PAWN_nameDef] was raised in the whimsical heart of a forest rumoured for its magical aura. Plucky adventurers came and went, in search of mythical xenos and artefacts, but [PAWN_nameDef] knew better than to share information with humans without something in exchange. Being a natural prankster, [PAWN_nameDef] often conned travellers out of their most prized possessions with cunning tricks and riddles.</baseDesc>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
		</spawnCategories>
		<skillGains>
			<Social>5</Social>
			<Intellectual>5</Intellectual>
			<Plants>3</Plants>
		</skillGains>
		<disallowedTraits>
			<Kind>0</Kind>
			<Industriousness>1</Industriousness>
			<Industriousness>2</Industriousness>
		</disallowedTraits>
		<requiredWorkTags>
			<li>Social</li>
		</requiredWorkTags>
		<!-- Items -->
		<possessions>
			<Silver>10</Silver>
		</possessions>
	</BackstoryDef>
	
	<!--============================== Caricaturist ============================-->
	<!-- Forces uncouth trait, even onto fauns -->

	<BackstoryDef>
		<defName>RBSFE_Caricaturist</defName>
		<title>caricaturist</title>
		<titleShort>artist</titleShort>
		<slot>Adulthood</slot>
		<baseDesc>[PAWN_nameDef] entertained townsfolk by creating exaggerated and offensive portraits of famous figures in society.</baseDesc>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
			<li>Bard</li>
		</spawnCategories>
		<skillGains>
			<Artistic>4</Artistic>
		</skillGains>
		<forcedTraits>
			<RBSF_Uncouth>0</RBSF_Uncouth>
		</forcedTraits>
	</BackstoryDef>
	
	<!--============================== Potter ============================-->
	<!-- Great gains in artistic and crafting, but let down by "recluse" trait -->

	<BackstoryDef>
		<defName>RBSFE_ShyPotter</defName>
		<title>potter</title>
		<titleShort>potter</titleShort>
		<slot>Adulthood</slot>
		<baseDesc>[PAWN_nameDef] crafted unique and abstract art pieces in [PAWN_possessive] isolated forest workshop.</baseDesc>
		<bodyTypeMale>Male</bodyTypeMale>
		<bodyTypeFemale>Female</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
			<li>MinotaurTribe</li>
		</spawnCategories>
		<skillGains>
			<Artistic>6</Artistic>
			<Crafting>6</Crafting>
			<Social>-8</Social>
		</skillGains>
		<forcedTraits>
			<TorturedArtist>0</TorturedArtist>
			<Recluse>0</Recluse>
		</forcedTraits>
	</BackstoryDef>
	
</Defs>